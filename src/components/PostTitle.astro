---
import { Post } from '../lib/interfaces.ts'
import { getPostLink } from '../lib/blog-helpers.ts'

export interface Props {
  post: Post
  enableLink: boolean
}

const { post, enableLink = true } = Astro.props
---

<h3 class="post-title">
  {enableLink ? (
    <a href={getPostLink(post.Slug)}>
      {post.Title}
    </a>
  ) : post.Title}
</h3>

