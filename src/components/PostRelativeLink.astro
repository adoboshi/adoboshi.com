---
import { Post } from '../lib/interfaces.ts'
import { getNavLink, getPostLink } from '../lib/blog-helpers.ts'
import PostTags from './PostTags.astro'

export interface Props {
  prevPost: Post
  nextPost: Post
}

const { prevPost, nextPost } = Astro.props
---

<div class="mt-12 w-full flex flex-col md:flex-row gap-2">
  <div class="md:basis-1/2">
    {
      /* 前の記事へ */
      prevPost && (
        <a href={getPostLink(prevPost.Slug)}>
          <button
            type="button"
            class="w-full py-3 px-4 inline-flex flex-row justify-center items-center gap-2 rounded-md bg-gray-100 border border-transparent text-gray-800 hover:bg-gray-200 focus:outline-none focus:ring-2 ring-offset-white focus:ring-gray-200 focus:ring-offset-2 transition-all text-sm"
          >
            <div class="w-8">
              <svg
                width="24px"
                height="24px"
                xmlns="http://www.w3.org/2000/svg"
                enable-background="new 0 0 24 24"
                viewBox="0 0 24 24"
              >
                <path
                  fill="#1F2937"
                  d="M8.5,12.8l5.7,5.6c0.4,0.4,1,0.4,1.4,0c0,0,0,0,0,0c0.4-0.4,0.4-1,0-1.4l-4.9-5l4.9-5c0.4-0.4,0.4-1,0-1.4c-0.2-0.2-0.4-0.3-0.7-0.3c-0.3,0-0.5,0.1-0.7,0.3l-5.7,5.6C8.1,11.7,8.1,12.3,8.5,12.8C8.5,12.7,8.5,12.7,8.5,12.8z"
                />
              </svg>
            </div>
            <div class="flex flex-col">
              <p class="text-gray-600 mb-1">前の記事</p>
              <p class="line-clamp-3 font-semibold">{prevPost.Title}</p>
            </div>
          </button>
        </a>
      )
    }
  </div>
  <div class="md:basis-1/2">
    {
      /* 次の記事へ */
      nextPost && (
        <a href={getPostLink(nextPost.Slug)}>
          <button
            type="button"
            class="w-full py-3 px-4 inline-flex flex-row justify-center items-center gap-2 rounded-md bg-gray-100 border border-transparent text-gray-800 hover:bg-gray-200 focus:outline-none focus:ring-2 ring-offset-white focus:ring-gray-200 focus:ring-offset-2 transition-all text-sm"
          >
            <div class="flex flex-col">
              <p class="text-gray-600 mb-1">次の記事</p>
              <p class="line-clamp-3 font-semibold">{nextPost.Title}</p>
            </div>
            <div class="w-8">
              <svg
                width="24px"
                height="24px"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
              >
                <path
                  fill="#1F2937"
                  d="M15.54,11.29,9.88,5.64a1,1,0,0,0-1.42,0,1,1,0,0,0,0,1.41l4.95,5L8.46,17a1,1,0,0,0,0,1.41,1,1,0,0,0,.71.3,1,1,0,0,0,.71-.3l5.66-5.65A1,1,0,0,0,15.54,11.29Z"
                />
              </svg>
            </div>
          </button>
        </a>
      )
    }
  </div>
</div>
{/* 記事一覧へ */}
<div class="mt-3 w-full flex justify-center">
  <a href={getNavLink('/blog')}>
    <button
      type="button"
      class="py-3 px-4 inline-flex justify-center items-center gap-2 rounded-md border border-transparent font-semibold text-blue-500 hover:text-blue-700 focus:outline-none focus:ring-2 ring-offset-white focus:ring-blue-500 focus:ring-offset-2 transition-all text-sm"
    >
      <svg
        width="20px"
        height="20px"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        ><path
          fill="#1D4ED8"
          d="M20.92,12.62a1,1,0,0,0-.21-.33l-3-3a1,1,0,0,0-1.42,1.42L17.59,12H8a1,1,0,0,1-1-1V7A1,1,0,0,0,5,7v4a3,3,0,0,0,3,3h9.59l-1.3,1.29a1,1,0,0,0,0,1.42,1,1,0,0,0,1.42,0l3-3a1,1,0,0,0,.21-.33A1,1,0,0,0,20.92,12.62Z"
        ></path></svg
      >
      <span>記事一覧へ</span>
    </button>
  </a>
</div>
